<% layout("./layouts/boilerplate") %> 
<h1>Green Destinations</h1>

<section class="white-section" id="city">
    <div class="row ">
        <%places.forEach(place=> {%>
            <div class="city-col col-lg-4 col-md-6">
                <div class="card">
                    <img class="card-img-top" src="<%=place.images[0].url%>" alt="image cap">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=place.name%>, <%=place.country%>
                        </h5>
                        <a href="places/<%=place._id%>" class="btn btn-lg btn-block btn-dark">See More</a>
                    </div>
                </div>
            </div>
            <% });%>


    </div>

</section>
